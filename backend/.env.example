# Server Configuration
PORT=4004
NODE_ENV=development

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/rtm_explorer

# Redis Configuration
REDIS_HOST=127.0.0.1
REDIS_PORT=6379

# Raptoreumd Configuration
RAPTOREUMD_HOST=127.0.0.1
RAPTOREUMD_PORT=10225
RAPTOREUMD_USER=rtm_explorer
RAPTOREUMD_PASSWORD=your_secure_password

# API Configuration
API_RATE_LIMIT_FREE=100
API_RATE_LIMIT_PREMIUM=1000

# Logging
LOG_LEVEL=info

# Export System Configuration
EXPORT_PRICE_USD=2.00
EXPORT_PRICE_VARIANCE=0.01
EXPORT_MAX_ASSETS=1000
EXPORT_MAX_TRANSACTIONS=10000
EXPORT_MAX_ADDRESSES=100
EXPORT_MAX_FILE_SIZE_MB=100
EXPORT_MAX_PROCESSING_TIME_SEC=600
EXPORT_RATE_LIMIT_PER_HOUR=10
EXPORT_QUEUE_MAX_SIZE=50
EXPORT_CONCURRENT_LIMIT=3
EXPORT_STORAGE_PATH=./exports

# Export Signing Keys
EXPORT_PRIVATE_KEY_PATH=./keys/private.pem
EXPORT_PUBLIC_KEY_PATH=./keys/public.pem

# Litecoin Payment Configuration
LITECOIN_RPC_ENABLED=false
LITECOIN_RPC_HOST=127.0.0.1
LITECOIN_RPC_PORT=9332
LITECOIN_RPC_USER=litecoin
LITECOIN_RPC_PASSWORD=your_litecoin_rpc_password
PAYMENT_CHECK_INTERVAL_MS=60000

# IPFS Configuration
IPFS_ENABLED=false
IPFS_HOST=127.0.0.1
IPFS_PORT=5001
IPFS_GATEWAY_URL=https://ipfs.io/ipfs/

# Remote Raptoreumd for Asset Tokenization
ASSET_TOKENIZATION_ENABLED=false
REMOTE_RAPTOREUMD_HOST=127.0.0.1
REMOTE_RAPTOREUMD_PORT=10225
REMOTE_RAPTOREUMD_USER=rtm_explorer
REMOTE_RAPTOREUMD_PASSWORD=your_secure_password
EXPORT_TOKEN_OWNER_ADDRESS=
