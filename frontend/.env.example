# ============================================
# FRONTEND CONFIGURATION
# ============================================
# Public URLs (accessible in browser)
NEXT_PUBLIC_APP_URL=https://assets.raptoreum.com
NEXT_PUBLIC_API_URL=https://assets.raptoreum.com/api/v1

# Site Metadata
NEXT_PUBLIC_SITE_NAME=Raptoreum Asset Explorer
NEXT_PUBLIC_SITE_DESCRIPTION=Explore Raptoreum blockchain assets and NFTs

# Feature Flags
NEXT_PUBLIC_ENABLE_EXPORTS=true
NEXT_PUBLIC_ENABLE_DARK_MODE=true

# Logo Configuration
# Path to the logo file relative to the /public directory (without leading slash)
# Supported formats: .svg, .png, .webp, .jpg
# Recommended size: 32x32 to 64x64 pixels for optimal display in the header
NEXT_PUBLIC_LOGO_PATH=rtm-logo.webp
NEXT_PUBLIC_LOGO_WIDTH=32
NEXT_PUBLIC_LOGO_HEIGHT=32
NEXT_PUBLIC_LOGO_ALT=Raptoreum Logo

# Analytics (optional)
NEXT_PUBLIC_GA_TRACKING_ID=
NEXT_PUBLIC_PLAUSIBLE_DOMAIN=

# Development
# Port on which the Next.js development/production server runs
# IMPORTANT: This must match the port in the nginx upstream config
# and the PM2 ecosystem.config.js (default: 3003)
PORT=3003

# ============================================
# SITE PASSWORD PROTECTION (optional)
# ============================================
# Set a password to protect the entire site.
# When set, visitors must enter this password to access any page.
# Leave empty or remove to disable password protection.
# SITE_PASSWORD=your-secret-password
